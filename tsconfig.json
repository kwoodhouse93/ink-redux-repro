{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src/",
		"esModuleInterop": true,
		"jsx": "react",
		"module": "CommonJS",
		"outDir": "dist",
		"strict": true,
		"typeRoots": [
			"./node_modules/@types",
			"./declarations",
		],
		"paths": {
			"ink-redux": [
				"../declarations/ink-redux"
			]
		}
	},
	"include": [
		"src/**/*",
	],
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	}
}
